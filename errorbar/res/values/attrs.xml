<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorbarLayoutStyle">
        <attr name="errorbarStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ErrorbarLayout">
        <!-- content -->
        <attr name="errorBackdrop" format="reference"/>
        <attr name="errorLogo" format="reference"/>
        <attr name="errorText" format="string"/>
        <attr name="errorTextAppearance" format="reference"/>
        <!-- positioning -->
        <attr name="contentMarginLeft" format="dimension"/>
        <attr name="contentMarginTop" format="dimension"/>
        <attr name="contentMarginRight" format="dimension"/>
        <attr name="contentMarginBottom" format="dimension"/>
        <!-- from Snackbar -->
        <attr name="android:maxWidth"/>
        <attr name="elevation"/>
        <attr name="maxActionInlineWidth"/>
    </declare-styleable>
</resources>