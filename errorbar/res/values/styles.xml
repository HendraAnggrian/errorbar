<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Design.Errorbar.Message" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="Widget.Design.Errorbar" parent="android:Widget" tools:ignore="PrivateResource">
        <!-- inherited from Snackbar -->
        <item name="elevation">@dimen/design_snackbar_elevation</item>
