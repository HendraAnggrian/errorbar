<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ErrorViewStyle">
        <attr name="errorViewStyle" format="reference"/>
    </declare-styleable>

    <declare-styleable name="ErrorView">
        <!-- content -->
        <attr name="errorBackground" format="reference"/>
        <attr name="errorLogo" format="reference"/>
        <attr name="errorText" format="string"/>
        <attr name="errorTextAppearance" format="reference"/>
        <!-- positioning -->
        <attr name="contentMarginLeft" format="dimension"/>
        <attr name="contentMarginTop" format="dimension"/>
        <attr name="contentMarginRight" format="dimension"/>
        <attr name="contentMarginBottom" format="dimension"/>
    </declare-styleable>
</resources>