<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="TextAppearance.Design.Bannerbar.Message" parent="TextAppearance.Design.Snackbar.Message" />

    <style name="Widget.Design.Bannerbar" parent="android:Widget">
        <item name="android:background">@drawable/design_bannerbar_background</item>
        <item name="android:paddingLeft">@dimen/design_bannerbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_bannerbar_padding_horizontal</item>
        <item name="elevation">@dimen/design_bannerbar_elevation</item>
        <item name="animationMode">slide</item>
        <item name="actionTextColorAlpha">@dimen/design_bannerbar_action_text_color_alpha</item>
    </style>

    <style name="Widget.MaterialComponents.Bannerbar" parent="Widget.Design.Bannerbar">
        <item name="android:background">@null</item>
        <item name="animationMode">fade</item>
        <item name="backgroundOverlayColorAlpha">@dimen/mtrl_bannerbar_background_overlay_color_alpha</item>
        <item name="actionTextColorAlpha">@dimen/mtrl_bannerbar_action_text_color_alpha</item>
    </style>

    <style name="Widget.MaterialComponents.Bannerbar.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:alpha">@dimen/material_emphasis_high_type</item>
        <item name="android:textAlignment" tools:ignore="NewApi">viewStart</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
        <item name="android:paddingTop">@dimen/design_bannerbar_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/design_bannerbar_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/design_bannerbar_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/design_bannerbar_padding_horizontal</item>
        <item name="android:textColor">?attr/colorSurface</item>
    </style>
</resources>